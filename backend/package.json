	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"build:clean": "rm -rf dist && tsc",
		"start": "npm run build && node dist",
		"start:clean": "npm run build:clean && node dist",
		"start:test": "npm run test && npm run build:clean && node dist",
		"dev": "tsx src",
		"dev:watch": "tsx --watch src",
		"test": "jest",
		"test:verbose": "jest --verbose",
		"test:watch": "jest --watchAll --verbose",
		"lint": "eslint .",
		"format": "prettier . --write"
	},
